@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-warning">Details Movie</h1>

<div>
    
    <hr />
    <dl class="row row g-3 justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4 bg-dark bg-gradient">

                <div class="card-body">
                    <h5 class="card-title text-warning text-opacity-75">@Html.DisplayFor(model => model.Title)</h5>
                    <p class="card-text text-warning text-opacity-55">Release Date: @Html.DisplayFor(model => model.ReleaseDate)</p>
                    <p class="card-text text-warning text-opacity-55">Genre: @Html.DisplayFor(model => model.Genre)</p>
                    <p class="card-text text-warning text-opacity-55">Price: @Html.DisplayFor(model => model.Price)</p>
                    <p class="card-text text-warning text-opacity-55">Rating: @Html.DisplayFor(model => model.Rating)</p>
                     <p class="card-text"><img class="MoviePoster" src="@Html.DisplayFor(model => model.pathFile)" /> </p>

                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>

                </div>
            </div>
        </div>
</div>
